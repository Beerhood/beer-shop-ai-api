{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.int-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage-integration",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@common/(.*)$": "<rootDir>/common/$1",
    "^@utils/(.*)$": "<rootDir>/utils/$1",
    "^src/(.*)$": "<rootDir>/$1"
  },
  "testTimeout": 30000
}
